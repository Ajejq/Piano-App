<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FirstFragment">

    <TextView
        android:id="@+id/textview_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_do"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="1"
        android:backgroundTint="#fff"
        android:text="@string/sound_do"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/button_re"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_re"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_mi"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_mi"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_fa"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_fa"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_sol"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_sol"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_la"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_la"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_si"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_si"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/button_DO2"
        android:layout_marginBottom="0dp"
        android:backgroundTint="#fff"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/sound_do2"
        android:textColor="@android:color/black"/>
</LinearLayout>